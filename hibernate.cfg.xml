<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hbm2ddl.auto">update</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.url">jdbc:postgresql://postgres/dev</property>
    <property name="hibernate.connection.username">dev</property>
    <property name="hibernate.connection.password">dev</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <mapping resource="hibernate/cached_user.hbm.xml" />
  </session-factory>
</hibernate-configuration>
